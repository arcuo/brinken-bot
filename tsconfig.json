{
    "compilerOptions": {
        "target": "ESNext", // or "esnext", "es2015", etc. (ES5 for broadest compatibility)
        "module": "NodeNext", // or "es", "commonjs" (UMD for universal module definition)
        "lib": [
            "esnext",
        ], // Include necessary library definitions (e.g., DOM for browser projects)
        "outDir": "./dist", // Output directory for compiled files
        "strict": true, // Enable strict type checking
        "esModuleInterop": true, // Allow interoperability between CommonJS and ES modules
        "moduleResolution": "NodeNext", // How modules are resolved
        "resolveJsonModule": true, // Allows importing .json files
        "skipLibCheck": true, // Skip type checking of declaration files
        "forceConsistentCasingInFileNames": true
    },
    "exclude": [
        "node_modules",
        "**/*.test.ts",
        "scripts",
    ] // Files to exclude
}